@page
@model PetsApp2.Pages.Cats.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Cat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="ImageUpload" class="control-label">Photo</label>
                <input type="file" asp-for="ImageUpload" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cat.PetName" class="control-label"></label>
                <input asp-for="Cat.PetName" class="form-control" />
                <span asp-validation-for="Cat.PetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.Breed" class="control-label"></label>
                <input asp-for="Cat.Breed" class="form-control" />
                <span asp-validation-for="Cat.Breed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.Weight" class="control-label"></label>
                <input asp-for="Cat.Weight" class="form-control" />
                <span asp-validation-for="Cat.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cat.FaveToy" class="control-label"></label>
                <input asp-for="Cat.FaveToy" class="form-control" />
                <span asp-validation-for="Cat.FaveToy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
